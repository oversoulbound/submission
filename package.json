{
  "name": "oversoul",
  "version": "0.0.1",
  "license": "Unlicense",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "ci": "yarn lint && yarn build",
    "lint": "run-p lint:*",
    "lint:contracts": "yarn workspace @oversoul/contracts lint",
    "lint:functions": "yarn workspace @oversoul/functions lint",
    "lint:web": "yarn workspace @oversoul/web lint",
    "fix": "run-p fix:*",
    "fix:contracts": "yarn workspace @oversoul/contracts fix",
    "fix:functions": "yarn workspace @oversoul/functions fix",
    "fix:web": "yarn workspace @oversoul/web fix",
    "predev": "yarn workspace @oversoul/functions build",
    "dev": "run-p dev:*",
    "dev:functions": "yarn workspace @oversoul/functions dev",
    "dev:web": "yarn workspace @oversoul/web dev",
    "dev:firebase": "firebase emulators:start --only functions,firestore,pubsub",
    "build": "run-p build:*",
    "build:contracts": "yarn workspace @oversoul/contracts build",
    "build:functions": "yarn workspace @oversoul/functions build",
    "build:web": "yarn workspace @oversoul/web build"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "firebase-tools": "^11.2.0",
    "npm-run-all": "^4.1.5"
  },
  "private": true
}
